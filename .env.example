# copy to .env and fill in
HETZNER_DNS_API_TOKEN=your_hetzner_dns_api_token

# Postgres bootstrap (docker only)
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=admin

# App connection strings (API uses PgBouncer for tenants; Admin talks to Postgres directly)
ConnectionStrings__PgBouncer=Host=pgbouncer;Port=6432;Username=app;Password=app;Database=postgres;Maximum Pool Size=50;Timeout=15;Command Timeout=15
ConnectionStrings__Admin=Host=postgres;Port=5432;Username=app;Password=app;Database=admin;Maximum Pool Size=10

# Optional: ASP.NET Core
ASPNETCORE_ENVIRONMENT=Production
